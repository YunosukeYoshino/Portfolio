{
  "name": "portfolio-nextjs",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "preview": "next build && next start",
    "typecheck": "tsc --noEmit",
    "lint": "run-p lint:*",
    "lint:biome": "biome check .",
    "lint:tsc": "tsc --noEmit",
    "fix": "run-p fix:*",
    "fix:biome": "biome check --fix .",
    "format": "biome format --write .",
    "check": "biome check .",
    "ci": "biome ci .",
    "lih": "lighthouse http://localhost:3000 --output-path=./reports/report.html",
    "deploy": "npm run build && npx wrangler pages deploy out --project-name=yunosuke-portfolio --branch=main --commit-dirty=true",
    "deploy:preview": "npm run build && npx wrangler pages deploy out --project-name=yunosuke-portfolio --branch=preview --commit-dirty=true",
    "prepare": "husky"
  },
  "dependencies": {
    "@next/third-parties": "^15.4.6",
    "@react-three/drei": "^10.6.1",
    "@react-three/fiber": "^9.3.0",
    "@shikijs/transformers": "^3.9.1",
    "clsx": "^2.1.1",
    "highlight.js": "^11.11.1",
    "lenis": "^1.3.8",
    "leva": "^0.10.0",
    "next": "^15.1.8",
    "postcss-preset-env": "^10.2.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "schema-dts": "^1.1.5",
    "shiki": "^3.9.1",
    "tailwind-merge": "^2.5.4",
    "three": "^0.179.1",
    "undici": "^7.13.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/cheerio": "^0.22.35",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@types/three": "^0.179.0",
    "autoprefixer": "^10.4.20",
    "gsap": "^3.12.8",
    "husky": "^9.1.7",
    "lighthouse": "^12.2.1",
    "lint-staged": "^16.1.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.1",
    "sass": "^1.83.0",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome check --write --unsafe"
    ],
    "*.{json,md,css,scss}": [
      "biome format --write"
    ]
  },
  "volta": {
    "node": "22.12.0"
  }
}
