{
  "name": "portfolio-nextjs",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "preview": "next build && next start",
    "typecheck": "tsc --noEmit",
    "lint": "run-p lint:*",
    "lint:biome": "biome check .",
    "lint:tsc": "tsc --noEmit",
    "fix": "run-p fix:*",
    "fix:biome": "biome check --fix .",
    "format": "biome format --write .",
    "check": "biome check .",
    "ci": "biome ci .",
    "lih": "lighthouse http://localhost:3000 --output-path=./reports/report.html",
    "deploy": "npm run build && npx wrangler pages deploy out --project-name=yunosuke-portfolio --branch=main --commit-dirty=true",
    "deploy:preview": "npm run build && npx wrangler pages deploy out --project-name=yunosuke-portfolio --branch=preview --commit-dirty=true",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@next/third-parties": "^15.5.4",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.3.0",
    "@tailwindcss/typography": "^0.5.19",
    "clsx": "^2.1.1",
    "next": "^15.5.4",
    "postcss-preset-env": "^10.4.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.64.0",
    "resend": "^6.1.2",
    "shiki": "^3.13.0",
    "tailwind-merge": "^3.3.1",
    "three": "^0.180.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/cheerio": "^0.22.35",
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@types/three": "^0.180.0",
    "autoprefixer": "^10.4.21",
    "gsap": "^3.13.0",
    "husky": "^9.1.7",
    "lighthouse": "^12.8.2",
    "lint-staged": "^16.2.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "sass": "^1.93.2",
    "tailwindcss": "^4.1.14",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome check --write --unsafe"
    ],
    "*.{json,css,scss}": [
      "biome format --write"
    ]
  },
  "volta": {
    "node": "22.12.0"
  }
}
