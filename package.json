{
  "name": "portfolio-tanstack",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "vite preview",
    "preview": "vite build && vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "run-p lint:*",
    "lint:biome": "biome check .",
    "lint:tsc": "tsc --noEmit",
    "fix": "run-p fix:*",
    "fix:biome": "biome check --fix .",
    "format": "biome format --write .",
    "check": "biome check .",
    "ci": "biome ci .",
    "deploy": "bun run build && npx wrangler pages deploy dist/client --project-name=yunosuke-portfolio --branch=main --commit-dirty=true",
    "deploy:preview": "bun run build && npx wrangler pages deploy dist/client --project-name=yunosuke-portfolio --branch=preview --commit-dirty=true",
    "wrangler": "wrangler",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-query": "^5.90.16",
    "@tanstack/react-router": "^1.144.0",
    "@tanstack/react-start": "^1.145.5",
    "@vitejs/plugin-react": "^5.1.2",
    "clsx": "^2.1.1",
    "gsap": "^3.14.2",
    "lenis": "^1.3.17",
    "lucide-react": "^0.562.0",
    "postcss-preset-env": "^10.6.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.70.0",
    "resend": "^6.6.0",
    "shiki": "^3.20.0",
    "tailwind-merge": "^3.4.0",
    "three": "^0.182.0",
    "vite-tsconfig-paths": "^6.0.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/three": "^0.182.0",
    "autoprefixer": "^10.4.23",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "wrangler": "^4.54.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome check --write --unsafe"
    ],
    "*.{json,css,scss}": [
      "biome format --write"
    ]
  }
}
