{
  "name": "portfolio-nextjs",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "preview": "next build && next start",
    "typecheck": "tsc --noEmit",
    "lint": "concurrently \"bun run lint:biome\" \"bun run lint:tsc\"",
    "lint:biome": "biome check .",
    "lint:tsc": "tsc --noEmit",
    "fix": "bun run fix:biome",
    "fix:biome": "biome check --fix .",
    "format": "biome format --write .",
    "check": "biome check .",
    "ci": "biome ci .",
    "deploy": "bun run build && bun x wrangler pages deploy out --project-name=yunosuke-portfolio --branch=main --commit-dirty=true",
    "deploy:preview": "bun run build && bun x wrangler pages deploy out --project-name=yunosuke-portfolio --branch=preview --commit-dirty=true",
    "wrangler": "wrangler",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@next/third-parties": "^16.1.1",
    "@tailwindcss/typography": "^0.5.19",
    "clsx": "^2.1.1",
    "gsap": "^3.14.2",
    "lenis": "^1.3.16",
    "lucide-react": "^0.562.0",
    "next": "^16.1.1",
    "postcss-preset-env": "^10.5.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.69.0",
    "resend": "^6.6.0",
    "shiki": "^3.20.0",
    "tailwind-merge": "^3.4.0",
    "three": "^0.182.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/three": "^0.182.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "wrangler": "^4.56.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome check --write --unsafe"
    ],
    "*.{json,css,scss}": [
      "biome format --write"
    ]
  }
}
