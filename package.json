{
  "name": "portfolio-nextjs",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "preview": "next build && next start",
    "typecheck": "tsc --noEmit",
    "lint": "run-p lint:*",
    "lint:biome": "biome check .",
    "lint:tsc": "tsc --noEmit",
    "fix": "run-p fix:*",
    "fix:biome": "biome check --fix .",
    "format": "biome format --write .",
    "check": "biome check .",
    "ci": "biome ci .",
    "lih": "lighthouse http://localhost:3000 --output-path=./reports/report.html",
    "deploy": "npm run build && npx wrangler pages deploy out --project-name=yunosuke-portfolio --branch=main --commit-dirty=true",
    "deploy:preview": "npm run build && npx wrangler pages deploy out --project-name=yunosuke-portfolio --branch=preview --commit-dirty=true",
    "wrangler": "wrangler",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@next/third-parties": "^16.0.7",
    "@tailwindcss/typography": "^0.5.19",
    "clsx": "^2.1.1",
    "lenis": "^1.3.16",
    "lucide-react": "^0.555.0",
    "next": "^16.0.7",
    "postcss-preset-env": "^10.5.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-hook-form": "^7.68.0",
    "resend": "^6.6.0",
    "shiki": "^3.19.0",
    "tailwind-merge": "^3.4.0",
    "three": "^0.181.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^24.10.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/three": "^0.181.0",
    "autoprefixer": "^10.4.22",
    "gsap": "^3.14.1",
    "husky": "^9.1.7",
    "lighthouse": "^13.0.1",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "wrangler": "^4.54.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome check --write --unsafe"
    ],
    "*.{json,css,scss}": [
      "biome format --write"
    ]
  }
}
